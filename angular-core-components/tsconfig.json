{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "es2020",
        "moduleResolution": "node",
        "importHelpers": true,
        "target": "es2015",
        "lib": [
            "es2020",
            "dom"
        ],
        "paths": {
            "@angular/*": ["./node_modules/@angular/*"],
            "@adobe/aem-core-components-angular-spa": [
                "./dist/aem-angular-core-spa-wcm-components"
            ],
            "@adobe/aem-core-components-angular-spa/*": [
                "./dist/aem-angular-core-spa-wcm-components/*"
            ],
            "@adobe/aem-core-components-angular-base": [
                "./dist/aem-angular-core-wcm-components"
            ],
            "@adobe/aem-core-components-angular-base/*": [
                "./dist/aem-angular-core-wcm-components/*"
            ],
            "@adobe/aem-angular-editable-components":[
                "./node_modules/@adobe/aem-angular-editable-components"
            ]
        }
    },
    "angularCompilerOptions": {
        "enableIvy": true,
        "fullTemplateTypeCheck": true,
        "strictInjectionParameters": true
    }
}